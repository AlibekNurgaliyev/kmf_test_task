<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/activity_main_button_registration"
        android:layout_width="@dimen/main_button_150x"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/activity_main_button_registration"
        >

    </Button>

    <Button
        android:id="@+id/activity_main_button_user_info"
        android:layout_width="@dimen/main_button_150x"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/activity_main_button_user_info"
        >

    </Button>

</LinearLayout>